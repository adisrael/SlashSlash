<div class="row top">
  <br>
  <h2>Most Subscribed Forums</h2>
  <br>
  <% @popular_forums.each do |forum| %>
    <div class=" top-results">
      <div class="search-result well">
        <h4><%= link_to forum.title, forum %></h4>
        <% pos = forum.votos>=0 %>
        <h4 class="votes-<%= pos ? 'green' : 'red' %> "> (<%= pos ? '+': ''  %> <%= forum.votos%>)</h4>
        <h4>| <%= forum.description %></h4>
        <h4>| <%= forum.subscriptors %></h4>
      </div>
    </div>
  <% end %>
</div>


<center>
<div class="digg_pagination">
  <%= will_paginate @popular_forums %>
</div>
</center>
