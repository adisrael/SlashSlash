<%= form_tag(image_upload_path, multipart: true) do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, '', id: :publication_title, required: true%>
  <%= label_tag :content %>
  <%= text_area_tag :content, '', id: :publication_content, required: true %>
  <%= file_field_tag :picture, required: true %>
  <%= submit_tag 'Submit' %>
<% end %>
