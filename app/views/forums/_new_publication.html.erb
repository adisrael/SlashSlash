<div class="new-publication">
  <h3>Publication Type:</h3>
  <select id="publication-type" class="" name="type">
    <option value="text">Text</option>
    <option value="link">Link</option>
    <option value="image">Image</option>
    <option value="poll">Poll</option>
  </select>
  <a id="new-publication" href="/forums/<%=@forum.id%>/new_publication/text">Create Publication</a>
</div>

<script type="text/javascript">
$(document).ready(()=>{
  $('#publication-type').change(function(){
    $('#new-publication').attr('href',  `/forums/<%=@forum.id%>/new_publication/${this.value}`)
  })
})
</script>
