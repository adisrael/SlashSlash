</div>
<div style="text-align: center;">


  <form action="/users" accept-charset="UTF-8" method="POST">
  	  <% form_authenticity_token %>
  	  <input type="hidden" name="authenticity_token" value="authenticity_token" >
  	  <input type="hidden" id="user_role" name="user[role]" value="1">

  	  <table style="margin: 0px auto;">
		<tr><th>First Name</th><th>Last Name</th><th>Username</th><th>Password</th></tr>

		<tr>
			<td><input type="text" id="user_firstName" name="user[firstName]" placeholder="First Name" ></td>
			<td><input type="text" id="user_lastName" name="user[lastName]" placeholder="Last Name"></td>
			<td><input type="text" id="user_userName" name="user[userName]" placeholder="Username"></td>
			<td><input type="text" id="user_password" name="user[password]" placeholder="Password"></td>
		</tr>

	  </table>

		<br>
	  <input type="submit" name="commit" value="Create User" data-disable-with="Create User" />
  </form>
</div>
